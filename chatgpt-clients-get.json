{
  "openapi": "3.1.0",
  "info": {
    "title": "BizWorx - Get Clients",
    "description": "View all clients for Flatline Earthworks business",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://bluecollarbizworx.replit.app"
    }
  ],
  "paths": {
    "/getClients": {
      "get": {
        "operationId": "getClients",
        "summary": "Get all clients",
        "description": "Retrieve all clients for Flatline Earthworks business",
        "responses": {
          "200": {
            "description": "List of clients",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "clients": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "name": {
                            "type": "string"
                          },
                          "email": {
                            "type": "string"
                          },
                          "phone": {
                            "type": "string"
                          },
                          "address": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "API_KEY"
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ]
}