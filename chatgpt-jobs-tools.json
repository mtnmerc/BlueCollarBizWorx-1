{
  "openapi": "3.1.0",
  "info": {
    "title": "BizWorx - Job and Schedule Management Tools",
    "description": "Complete job, project and scheduling operations for Flatline Earthworks business",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://bluecollarbizworx.replit.app"
    }
  ],
  "paths": {
    "/getJobs": {
      "get": {
        "operationId": "getJobs",
        "summary": "Get all jobs",
        "description": "Retrieve all jobs and projects for Flatline Earthworks business",
        "responses": {
          "200": {
            "description": "List of jobs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "title": {
                            "type": "string"
                          },
                          "description": {
                            "type": "string"
                          },
                          "status": {
                            "type": "string"
                          },
                          "clientId": {
                            "type": "integer"
                          },
                          "clientName": {
                            "type": "string"
                          },
                          "startDate": {
                            "type": "string"
                          },
                          "endDate": {
                            "type": "string"
                          },
                          "estimatedCost": {
                            "type": "number"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/gpt/jobs": {
      "post": {
        "operationId": "createJob",
        "summary": "Create a new job",
        "description": "Add a new job or project to Flatline Earthworks business",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title", "clientId"],
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "Job title"
                  },
                  "description": {
                    "type": "string",
                    "description": "Job description"
                  },
                  "clientId": {
                    "type": "integer",
                    "description": "Client ID for this job"
                  },
                  "status": {
                    "type": "string",
                    "enum": ["pending", "active", "completed", "cancelled"],
                    "description": "Job status"
                  },
                  "startDate": {
                    "type": "string",
                    "format": "date",
                    "description": "Job start date"
                  },
                  "endDate": {
                    "type": "string",
                    "format": "date",
                    "description": "Job end date"
                  },
                  "estimatedCost": {
                    "type": "number",
                    "description": "Estimated cost for the job"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Job created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "title": {
                          "type": "string"
                        },
                        "description": {
                          "type": "string"
                        },
                        "status": {
                          "type": "string"
                        },
                        "clientId": {
                          "type": "integer"
                        },
                        "startDate": {
                          "type": "string"
                        },
                        "endDate": {
                          "type": "string"
                        },
                        "estimatedCost": {
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {},
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
  ]
}