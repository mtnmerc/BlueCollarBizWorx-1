{
  "openapi": "3.1.0",
  "info": {
    "title": "BizWorx - Estimate Management Tools",
    "description": "Complete estimate operations for Flatline Earthworks business",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://bluecollarbizworx.replit.app"
    }
  ],
  "paths": {
    "/api/gpt/estimates": {
      "get": {
        "operationId": "getEstimates",
        "summary": "Get all estimates",
        "description": "Retrieve all estimates for Flatline Earthworks business",
        "responses": {
          "200": {
            "description": "List of estimates",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "estimateNumber": {
                            "type": "string"
                          },
                          "clientId": {
                            "type": "integer"
                          },
                          "clientName": {
                            "type": "string"
                          },
                          "amount": {
                            "type": "number"
                          },
                          "status": {
                            "type": "string"
                          },
                          "validUntil": {
                            "type": "string"
                          },
                          "createdDate": {
                            "type": "string"
                          },
                          "description": {
                            "type": "string"
                          },
                          "items": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "description": {
                                  "type": "string"
                                },
                                "quantity": {
                                  "type": "number"
                                },
                                "rate": {
                                  "type": "number"
                                },
                                "total": {
                                  "type": "number"
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createEstimate",
        "summary": "Create a new estimate",
        "description": "Generate a new estimate for Flatline Earthworks business",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["clientId", "description", "items"],
                "properties": {
                  "clientId": {
                    "type": "integer",
                    "description": "Client ID for this estimate"
                  },
                  "description": {
                    "type": "string",
                    "description": "Estimate description or project overview"
                  },
                  "validUntil": {
                    "type": "string",
                    "format": "date",
                    "description": "Estimate validity date"
                  },
                  "items": {
                    "type": "array",
                    "description": "Estimate line items",
                    "items": {
                      "type": "object",
                      "required": ["description", "quantity", "rate"],
                      "properties": {
                        "description": {
                          "type": "string",
                          "description": "Item description"
                        },
                        "quantity": {
                          "type": "number",
                          "description": "Item quantity"
                        },
                        "rate": {
                          "type": "number",
                          "description": "Item rate/price per unit"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Estimate created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "estimateNumber": {
                          "type": "string"
                        },
                        "clientId": {
                          "type": "integer"
                        },
                        "amount": {
                          "type": "number"
                        },
                        "status": {
                          "type": "string"
                        },
                        "validUntil": {
                          "type": "string"
                        },
                        "description": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/gpt/estimates/{id}": {
      "put": {
        "operationId": "updateEstimate",
        "summary": "Update an estimate",
        "description": "Update an existing estimate for Flatline Earthworks business",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The ID of the estimate to update",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "description": {
                    "type": "string",
                    "description": "Estimate description"
                  },
                  "status": {
                    "type": "string",
                    "enum": ["draft", "sent", "accepted", "rejected", "expired"],
                    "description": "Estimate status"
                  },
                  "validUntil": {
                    "type": "string",
                    "format": "date",
                    "description": "Estimate validity date"
                  },
                  "items": {
                    "type": "array",
                    "description": "Updated estimate line items",
                    "items": {
                      "type": "object",
                      "properties": {
                        "description": {
                          "type": "string"
                        },
                        "quantity": {
                          "type": "number"
                        },
                        "rate": {
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Estimate updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "estimateNumber": {
                          "type": "string"
                        },
                        "amount": {
                          "type": "number"
                        },
                        "status": {
                          "type": "string"
                        },
                        "validUntil": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/gpt/estimates/{id}/convert": {
      "post": {
        "operationId": "convertEstimateToJob",
        "summary": "Convert estimate to job",
        "description": "Convert an accepted estimate into a job/project",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The ID of the estimate to convert",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "startDate": {
                    "type": "string",
                    "format": "date",
                    "description": "Job start date"
                  },
                  "endDate": {
                    "type": "string",
                    "format": "date",
                    "description": "Job end date"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Estimate converted to job successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "estimateId": {
                          "type": "integer"
                        },
                        "jobId": {
                          "type": "integer"
                        },
                        "jobTitle": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/gpt/estimates/{id}/send": {
      "post": {
        "operationId": "sendEstimate",
        "summary": "Send an estimate",
        "description": "Send an estimate to the client via email",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The ID of the estimate to send",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Estimate sent successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "estimateId": {
                          "type": "integer"
                        },
                        "sentTo": {
                          "type": "string"
                        },
                        "sentDate": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "API_KEY"
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ]
}