{
  "openapi": "3.0.0",
  "info": {
    "title": "BizWorx Business Management API",
    "description": "Voice-controlled business management for service companies",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://bluecollarbizworx.replit.app"
    }
  ],
  "paths": {
    "/gpt/clients": {
      "get": {
        "operationId": "listClients",
        "summary": "List all clients",
        "description": "Get a list of all clients in the system",
        "responses": {
          "200": {
            "description": "Successfully retrieved clients",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {"type": "integer"},
                      "name": {"type": "string"},
                      "phone": {"type": "string"},
                      "email": {"type": "string"}
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createClient",
        "summary": "Create a new client",
        "description": "Add a new client to the system",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": {"type": "string"},
                  "phone": {"type": "string"},
                  "email": {"type": "string"},
                  "address": {"type": "string"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Client created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {"type": "integer"},
                    "name": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/gpt/jobs": {
      "get": {
        "operationId": "listJobs",
        "summary": "List all jobs",
        "description": "Get a list of all jobs in the system",
        "responses": {
          "200": {
            "description": "Successfully retrieved jobs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {"type": "integer"},
                      "title": {"type": "string"},
                      "status": {"type": "string"},
                      "clientName": {"type": "string"},
                      "scheduledDate": {"type": "string"}
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createJob",
        "summary": "Create a new job",
        "description": "Schedule a new job for a client",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title", "clientId"],
                "properties": {
                  "title": {"type": "string"},
                  "description": {"type": "string"},
                  "clientId": {"type": "integer"},
                  "scheduledDate": {"type": "string"},
                  "status": {"type": "string"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Job created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {"type": "integer"},
                    "title": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}